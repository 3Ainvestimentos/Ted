
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access to all collections for any authenticated user
    match /{document=**} {
      allow read, write: if request.auth != null;
    }

    // Allow anyone to read the maintenance settings
    match /settings/maintenance {
      allow get: if true;
      allow write: if request.auth != null; // Only authenticated users can change settings
    }
  }
}
