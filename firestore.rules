rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Permite a leitura da lista de colaboradores para verificação de autorização
    // antes do login completo, corrigindo o loop de carregamento infinito.
    match /collaborators/{document=**} {
      allow read: if true; 
      allow write: if request.auth != null; // Apenas usuários logados podem escrever
    }

    // Regras para as outras coleções: requerem autenticação
    match /initiatives/{document=**} {
      allow read, write: if request.auth != null;
    }

    match /recurringMeetings/{document=**} {
      allow read, write: if request.auth != null;
    }

    match /businessAreas/{document=**} {
      allow read, write: if request.auth != null;
    }

    match /okrs/{document=**} {
      allow read, write: if request.auth != null;
    }
    
    match /kpis/{document=**} {
      allow read, write: if request.auth != null;
    }

    match /notes/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /tasks/{document=**} {
      allow read, write: if request.auth != null;
    }

    match /settings/{document=**} {
      allow read, write: if request.auth != null;
    }

    match /auditLogs/{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
