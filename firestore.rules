rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Permite leitura pública para verificar o modo de manutenção antes do login
    match /settings/maintenance {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Permite leitura pública para que o sistema de login possa validar se um e-mail é autorizado
    match /authorizedUsers/{userId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Regra geral: Para todos os outros documentos, exige que o usuário esteja autenticado.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
