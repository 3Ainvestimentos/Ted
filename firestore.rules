rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // =================================
    // Funções Helper de Segurança
    // =================================
    
    // Função para verificar se um UID pertence a um administrador.
    function isAdmin(userId) {
      return get(/databases/$(database)/documents/settings/maintenance).data.adminEmails.hasAny([request.auth.token.email]);
    }
    
    // =================================
    // Regras Gerais
    // =================================

    // Regra Padrão: Negar tudo, a menos que seja explicitamente permitido abaixo.
    match /{document=**} {
      allow read, write: if false;
    }

    // =================================
    // Regras por Coleção
    // =================================

    // A coleção 'authorizedUsers' pode ser lida por qualquer um para a verificação inicial de login.
    match /authorizedUsers/{userId} {
      allow read: if true;
      allow write: if isAdmin(request.auth.uid); // Apenas admins podem adicionar/remover usuários autorizados
    }
    
    // A coleção 'settings' pode ser lida por qualquer um (para verificar o modo de manutenção).
    // A escrita é limitada a administradores.
    match /settings/maintenance {
      allow read: if true;
      allow write: if isAdmin(request.auth.uid);
    }

    // A coleção 'collaborators' SÓ PODE ser listada (lida) por administradores.
    match /collaborators/{collaboratorId} {
      allow read, write: if isAdmin(request.auth.uid);
    }
    
    match /businessAreas/{areaId} {
      allow read, write: if request.auth != null;
    }
    match /initiatives/{initiativeId} {
      allow read, write: if request.auth != null;
    }
    match /kpis/{kpiId} {
      allow read, write: if request.auth != null;
    }
    match /okrs/{okrId} {
      allow read, write: if request.auth != null;
    }
    match /recurringMeetings/{meetingId} {
      allow read, write: if request.auth != null;
    }
    
    // Coleções específicas do usuário (Notas e Tarefas)
    // Apenas o próprio usuário pode acessar seus dados.
    match /notes/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Regra corrigida para Tasks: permite criar e depois gerenciar o próprio recurso.
    match /tasks/{taskId} {
      allow read, update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }

    match /auditLogs/{logId} {
      allow read, write: if isAdmin(request.auth.uid);
    }
  }
}
